<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".p.database.UpdateUser">

    <EditText
        android:id="@+id/idEdtUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Name eingeben"
        android:textColor="@color/primaryTextColor"/>

    <EditText
        android:id="@+id/idEdtIteration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Wiederholung der Übungen eingeben"
        android:inputType="number" />

    <EditText
        android:id="@+id/idEdtAnimationOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Erste Übung eingeben"
        android:inputType="number" />

    <EditText
        android:id="@+id/idEdtAnimationTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Zweite Übung eingeben"
        android:inputType="number" />
    <Button
        android:id="@+id/idBtnPalybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Start" style="@style/MyButton"/>

    <Button
        android:id="@+id/idBtnUpdateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Benutzer aktualisieren"
        style="@style/MyButton"/>

    <Button
        android:id="@+id/idBtnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Benutzer löschen"
        style="@style/MyButton"/>

</LinearLayout>